<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="sample.weatherapp.controllers.SettingsDialogController"  prefWidth="300"  stylesheets="@../styles/styles.css" styleClass="settings-view"
>
  <children>
    <Label text="API Key" />
    <TextField fx:id="apiKeyTextField" prefWidth="200"/>
    <Label text="Default City" />
    <TextField fx:id="defaultCityTextField" prefWidth="200"/>
    <Label>Language:</Label>
    <ComboBox fx:id="localeComboBox" prefWidth="270" />


    <Button text="Save" onAction="#handleSaveAction"/>
  </children>
  <padding>
    <Insets top="10" right="10" bottom="10" left="10"/>
  </padding>
</VBox>